<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:baselineAligned="false"
    android:padding="0dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/board_reply_count"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/px_1"
            android:background="@color/shit1_2"
            android:gravity="center"
            android:textColor="#FF8FD7"
            android:textSize="20sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/board_title_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/px_1"
            android:layout_marginLeft="@dimen/px_1"
            android:background="@color/shit1_1"
            android:orientation="vertical"
            android:padding="10dp" >

            <TextView
                android:id="@+id/board_topic_author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:textColor="@color/boardlist_author"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/board_topic_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:minHeight="30dp"
                android:paddingTop="5dp"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="10dp" >

                <TextView
                    android:id="@+id/board_topic_replytime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:textColor="@color/boardlist_replytime"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/board_topic_poster"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:textColor="@color/boardlist_poster"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/topiclist_item_click"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/main_board_bg1_select_style" />

</FrameLayout>