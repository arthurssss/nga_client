<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:baselineAligned="false"
    android:orientation="horizontal"
    android:padding="0dp" >

    <TextView
        android:id="@+id/board_reply_count"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/px_1"
        android:background="@color/shit1"
        android:gravity="center"
        android:text="133"
        android:textColor="#FF8FD7"
        android:textSize="20sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/board_title_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/px_1"
        android:layout_marginLeft="@dimen/px_1"
        android:background="@color/shit2"
        android:orientation="vertical"
        android:padding="10dp" >
        
        <TextView
            android:id="@+id/board_topic_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我怎能不变态"
            android:textColor="@color/boardlist_author"
            android:layout_marginRight="20dp"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/board_topic_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:paddingTop="5dp"
            android:minHeight="30dp"
            android:text="关于腾讯新闻弹框等等了设计费拉卡机了"
            android:textSize="18sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp" >

            <TextView
                android:id="@+id/board_topic_replytime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:maxWidth="100dp"
                android:text="2013-9-16"
                android:textColor="@color/boardlist_replytime"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/board_topic_poster"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:maxWidth="100dp"
                android:text="夏木水田"
                android:textColor="@color/boardlist_poster"
                android:textSize="12sp" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>